{% extends 'base.html.twig' %}

{% block title %}Festival Technonite : Artistes
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-center my-5">
		<div class="justify-content-around">
			<button type="button" class="btn btn-outline-primary" href="">Mélodique</button>
			<button type="button" class="btn btn-outline-secondary" href="">Industrielle</button>
			<button type="button" class="btn btn-outline-success" href="">Groovy</button>
			<button type="button" class="btn btn-outline-info" href="">Deep</button>
			<button type="button" class="btn btn-outline-warning" href="">Détroit</button>
		</div>
	</div>

	<div class="row">
		{%for i in 1..12 %}
			<div class="col-4">
				<div class="card border-success mb-3">
					<div class="card-body">
						<h4 class="card-title">Artiste n°
							{{i}}</h4>
						<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
